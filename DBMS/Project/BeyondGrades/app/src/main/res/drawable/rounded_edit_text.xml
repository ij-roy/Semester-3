<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="@android:color/white" /> <!-- You can change this color -->

    <!-- Rounded Corners -->
    <corners android:radius="16dp" /> <!-- Adjust the corner radius for roundness -->

    <!-- Optional: Border (Stroke) -->
    <stroke android:color="@color/stroke_color" android:width="2dp" /> <!-- Optional border color -->

    <!-- Optional: Padding (optional internal space) -->
    <padding android:left="16dp" android:top="12dp" android:right="16dp" android:bottom="12dp" />
</shape>
